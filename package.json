        "@eslint/js": "^9.12.0",
        "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
        "@types/bun": "latest",
        "drizzle-kit": "^0.25.0",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-drizzle": "^0.2.3",
        "globals": "^15.10.0",
